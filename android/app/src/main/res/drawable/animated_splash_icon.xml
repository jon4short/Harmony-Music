<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="true">
    
    <!-- Start with the regular icon -->
    <item android:duration="500" android:drawable="@mipmap/ic_launcher" />
    
    <!-- Fade effect using the foreground -->
    <item android:duration="300" android:drawable="@mipmap/ic_launcher_foreground" />
    
    <!-- Back to regular icon -->
    <item android:duration="200" android:drawable="@mipmap/ic_launcher" />
</animation-list>